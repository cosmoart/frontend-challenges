---
import '@/components/article-preview-component/style.scss';
---

<!DOCTYPE html>
<html lang='en'>
	<head>
		<title>Article preview component</title>

		<!-- Meta -->
		<meta charset='UTF-8' />
		<meta http-equiv='X-UA-Compatible' content='IE=edge' />
		<meta name='viewport' content='width=device-width, initial-scale=1.0' />
		<meta name='author' content='CosmoArt' />
		<meta
			name='description'
			content='Solution to the Frontend Mentor challenge, code by Cosmo Art'
		/>
		<meta name='robots' content='index, nofollow' />

		<!-- Open Graph -->
		<meta property='og:title' content='TArticle preview component' />
		<meta property='og:type' content='website' />
		<meta
			property='og:image'
			content='https://article-preview-component-solution-sooty.vercel.app/images/screenshots/desktop-solution.webp'
		/>
		<meta
			property='og:url'
			content='https://article-preview-component-solution-sooty.vercel.app'
		/>
		<meta
			property='og:description'
			content='Solution to the Frontend Mentor challenge, code by Cosmo Art'
		/>

		<!-- Links -->
		<link rel='preconnect' href='https://fonts.googleapis.com' />
		<link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
		<link
			href='https://fonts.googleapis.com/css2?family=Manrope:wght@500;700&display=swap'
			rel='stylesheet'
		/>
	</head>

	<body>
		<main>
			<img src='/assets/article-preview-component/drawers.jpg' alt='' />
			<article>
				<h1>
					Shift the overall look and feel by adding these wonderful
					touches to furniture in your home
				</h1>
				<p>
					Ever been in a room and felt like something was missing?
					Perhaps it felt slightly bare and uninviting. Iâ€™ve got some
					simple tips to help you make any room feel complete.
				</p>
				<footer>
					<img
						src='/assets/article-preview-component/avatar-michelle.jpg'
						alt='Michelle avatar'
					/>
					<div>
						<p><strong>Michelle Appleton</strong></p>
						<p>28 Jun 2020</p>
					</div>
				</footer>
				<aside class='shareMenu'>
					<p>Share</p>
					<a
						href='https://www.facebook.com'
						target='_blank'
						rel='noopener'>
						<img
							src='/assets/article-preview-component/icon-facebook.svg'
							title='Facebook'
						/>
					</a>
					<a
						href='https://twitter.com/CosmoArt0'
						target='_blank'
						rel='noopener noreferrer'>
						<img
							src='/assets/article-preview-component/icon-twitter.svg'
							title='Twitter'
						/>
					</a>
					<a
						href='https://co.pinterest.com/cosmo_art/'
						target='_blank'
						rel='noopener noreferrer'>
						<img
							src='/assets/article-preview-component/icon-pinterest.svg'
							title='Pinterest'
						/>
					</a>
				</aside>
				<div id='share' title='Share'>
					<svg
						xmlns='http://www.w3.org/2000/svg'
						width='15'
						height='13'>
						<path
							fill='#6E8098'
							d='M15 6.495L8.766.014V3.88H7.441C3.33 3.88 0 7.039 0 10.936v2.049l.589-.612C2.59 10.294 5.422 9.11 8.39 9.11h.375v3.867L15 6.495z'
						></path>
					</svg>
				</div>
			</article>
		</main>
		<footer class='attribution'>
			Challenge by <a
				href='https://www.frontendmentor.io?ref=challenge'
				target='_blank'
				rel='noopener'>Frontend Mentor</a
			>.Coded by <a
				href='https://github.com/cosmoart'
				target='_blank'
				rel='noopener'>CosmoArt</a
			>.
		</footer>
	</body>

	<script src='@/components/article-preview-component/index.ts'></script>
</html>
