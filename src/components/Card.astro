---
interface Props {
	title: string;
	imgUrl: string;
	projectUrl: string;
}

const { projectUrl, title, imgUrl } = Astro.props;
import codeIcon from '@/assets/icons/code.svg';
---

<li class='link-card'>
	<div>
		<a href={projectUrl} class='link-img'>
			<img src={imgUrl} alt={title} height='210' />
		</a>
		<div class='footer-card'>
			<h3>
				{title}
				<span>&rarr;</span>
			</h3>
			<a href='#' class='code-link'>
				<img src={codeIcon} title='View Code' />
			</a>
		</div>
	</div>
</li>

<style>
	.link-card {
		list-style: none;
		background-color: #1b1e24;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		transition: all 0.2s ease-in-out;
	}
	.link-card:hover {
		scale: 1.03;
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		border-radius: 8px;
		color: white;
	}
	.link-img {
		width: 100%;
		height: 80%;
		display: block;
		border-radius: 8px;
	}
	.link-img img {
		border-radius: 8px;
		object-fit: cover;
		width: 100%;
		height: 100%;
		vertical-align: middle;
	}
	.footer-card {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 10px 1.5rem;
	}
	h3 {
		margin: 0 !important;
		font-size: 1.1rem !important;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}

	.code-link {
		display: flex;
		align-items: center;
		justify-content: center;
		width: 40px;
		height: 40px;
		border-radius: 50%;
		background-color: #1b1e24;
		transition: all 0.2s ease-in-out;
	}
	.code-link:hover {
		background-color: #2b2e34;
	}
</style>
